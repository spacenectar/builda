{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "es5", "es6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false,
    "noUncheckedIndexedAccess": true,
    "outDir": "./dist",
    "baseUrl": "./src"
  },
  "include": [
    "src/types/**/*",
    "src/**/*.ts",
    "src/**/*.tsx" ],
  "exclude": [
    "node_modules",
    "experiments",
    "example",
    "coverage",
    "src/scaffold",
    "src/data",
    "src/mocks",
    "archive"
  ]
}
