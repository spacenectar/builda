{
  "init": {
    "description": "Initialises a new project",
    "required": false,
    "boolean": true
  },
  "name": {
    "description": "The name of the project",
    "required": false,
    "boolean": false,
    "type": "string",
    "implies": "init",
    "alias": "n"
  },
  "root": {
    "description": "The relative path to the application root directory",
    "required": false,
    "type": "string",
    "implies": "init",
    "alias": "r"
  },
  "add": {
    "description": "Adds a new builda module",
    "required": false,
    "type": "string"
  },
  "watch": {
    "description": "Watches for changes and keeps the app in sync with the prefab",
    "required": false,
    "boolean": true
  },
  "build": {
    "description": "Syncs the app with the prefab once. Use this to build the app",
    "required": false,
    "boolean": true
  },
  "run": {
    "description": "Runs a specified command",
    "required": false,
    "boolean": true
  },
  "migrate": {
    "description": "Migrates a project to the latest version",
    "required": false,
    "boolean": true
  },
  "manual": {
    "description": "Bypasses the need for a config file",
    "required": false,
    "boolean": true,
    "alias": [
      "cli",
      "m"
    ]
  }
}
