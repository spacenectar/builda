{
  "name": "buildcom",
  "version": "3.0.3",
  "bin": {
    "buildcom": "index.js"
  },
  "description": "A component generator for react",
  "keywords": [
    "node",
    "components",
    "generator",
    "react",
    "sass",
    "stylus",
    "less",
    "css",
    "jest",
    "storybook",
    "typescript"
  ],
  "main": "src/scripts/index.ts",
  "scripts": {
    "start": "index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc --build",
    "lint:md": "markdownlint -c .markdownlint.json --fix --ignore node_modules **/*.md",
    "lint:json": "eslint **/*.json --fix",
    "prettier-check": "prettier --check .",
    "prettier-write": "prettier --write ."
  },
  "preferGlobal": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/foxleigh81/buildcom.git"
  },
  "author": {
    "name": "Alex Foxleigh",
    "url": "https://github.com/foxleigh81"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/foxleigh81/buildcom/issues"
  },
  "homepage": "https://github.com/foxleigh81/buildcom/#readme",
  "dependencies": {
    "chalk": "^3.0.0",
    "inquirer": "^7.0.4",
    "js-yaml": "^3.9.1",
    "markdownlint": "^0.25.1",
    "yargs": "^15.1.0"
  },
  "devDependencies": {
    "@types/inquirer": "^8.2.1",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^17.0.25",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-output": "^3.0.1",
    "eslint-plugin-prettier": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "typescript": "^4.6.3",
    "typescript-eslint": "^0.0.1-alpha.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "yarn lint:ts"
    ],
    "*.json": [
      "prettier --write",
      "yarn lint:json"
    ],
    "*.md": [
      "prettier --write",
      "yarn lint:md"
    ]
  }
}
