{
  "output": {
    "description": "Specifies an output directory",
    "required": false,
    "alias": "o",
    "type": "string",
    "default": "."
  },
  "dirs": {
    "description": "A comma-separated list of directory names to generate",
    "required": false,
    "alias": "d",
    "default": "",
    "type": "string"
  },
  "storybook": {
    "description": "Generate storybook files?",
    "required": false,
    "alias": "s",
    "boolean": true
  },
  "story_format": {
    "description": "Use MDX or CSF format for stories?",
    "required": false,
    "default": "csf",
    "choices": ["csf", "mdx", "CSF", "MDX"]
  },
  "test": {
    "description":
      "Generate test snapshot files? (Only Jest is supported right now)",
    "required": false,
    "alias": "t",
    "boolean": true
  },
  "test_extension": {
    "description":
      "use either 'spec' or 'test' as the extension for test files (.js or .ts is appended automatically)",
    "required": false,
    "type": "string",
    "default": "test",
    "choices": ["spec", "test"]
  },
  "css": {
    "description":
      "Choose a CSS file type (css (default), sass/scss)",
    "required": false,
    "alias": "c",
    "type": "string",
    "default": "css",
    "choices": ["css", "sass", "scss", "SASS", "SCSS", "CSS"]
  },
  "modules": {
    "description": "Use CSS modules",
    "required": false,
    "alias": "m",
    "default": false,
    "boolean": true
  },
  "typescript": {
    "description": "Use TypeScript?",
    "required": false,
    "alias": "T",
    "boolean": true
  },
  "prepopulate": {
    "description": "Generate components with example code?",
    "required": false,
    "alias": "p",
    "default": false,
    "boolean": true
  },
  "readme": {
    "description": "Generate a README file?",
    "required": false,
    "alias": "r",
    "default": false,
    "boolean": true
  },
  "force": {
    "description": "Ignores existing directories and overwrites files anyway.",
    "required": false,
    "alias": "f",
    "default": false,
    "boolean": true
  }
}
